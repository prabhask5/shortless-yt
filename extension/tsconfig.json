{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"outDir": "compiled",
		"rootDir": "src",
		"strict": true,
		"noEmit": false,
		"declaration": false,
		"sourceMap": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"types": ["chrome-types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist-*", "compiled"]
}
